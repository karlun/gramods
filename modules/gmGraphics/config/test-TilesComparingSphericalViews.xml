<config>

  <OStreamMessageSink stream="err" useAnsiColor="1" level="1"/>
  <LogFileMessageSink logFilePath="gramods.log" append="0"/>

  <ImportLibrary lib="libgmGraphics.so"/>

  <SdlWindow
      size="1536 1024"
      title="Spherical"
      GLMajor="3" GLMinor="3">

    <SdlContext
        DEF="SDLContext"
        useVideo="1"/>

    <CubeSceneRenderer
        cubeSize="0.2"
        cubeSetSize="10.0"/>

    <TiledView>

      <param name="tileLocation" value="0 1 1 2"/>
      <SpatialSphericalView
          cubeMapResolution="1024"
          linearInterpolation="1"
          coverageAngle="6.283"
          projectionType="0">

        <VelocityViewpoint
            position="0 0 7"
            velocity="0 0 -0.5"
            angleAxisVelocity="1 0 0 0"
            DEF="viewpoint"/>

      </SpatialSphericalView>

      <param name="tileLocation" value="0 0 1 1"/>
      <SpatialSphericalView
          cubeMapResolution="1024"
          linearInterpolation="1"
          coverageAngle="6.283"
          projectionType="2">

        <VelocityViewpoint
            USE="viewpoint"/>

      </SpatialSphericalView>

      <param name="tileLocation" value="1 1 1 2"/>
      <PosedSphericalView
          cubeMapResolution="1024"
          linearInterpolation="1"
          coverageAngle="6.283"
          projectionType="0">

        <VelocityViewpoint
            USE="viewpoint"/>

      </PosedSphericalView>

      <param name="tileLocation" value="1 0 1 1"/>
      <PosedSphericalView
          cubeMapResolution="1024"
          linearInterpolation="1"
          coverageAngle="6.283"
          projectionType="2">

        <VelocityViewpoint
            USE="viewpoint"/>

      </PosedSphericalView>
    </TiledView>

  </SdlWindow>

</config>
