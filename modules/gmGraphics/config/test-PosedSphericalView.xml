<config>

  <OStreamMessageSink stream="err" useAnsiColor="1" level="1"/>
  <LogFileMessageSink logFilePath="gramods.log" append="0"/>

  <ImportLibrary lib="libgmGraphics.so"/>

  <SdlWindow
      size="1024 1024"
      title="Spherical"
      GLMajor="3" GLMinor="3">

    <SdlContext
        DEF="SDLContext"
        useVideo="1"/>

    <CubeSceneRenderer
        cubeSize="0.2"
        cubeSetSize="10.0"/>

    <PosedSphericalView
        cubeMapResolution="1024"
        linearInterpolation="1"
        coverageAngle="6.283"
        projectionType="0">

      <VelocityViewpoint
          position="0 0 7"
          velocity="0 0 -0.5"
          rotation="axisangle 1 0 0 0"/>

    </PosedSphericalView>

  </SdlWindow>

</config>
