<config>

  <ImportLibrary library="gmGraphics"/>

  <ObjRenderer
      DEF="OBJ"
      recenter="false"
      file="urn:gramods:gmGraphics/resources/axes.obj"/>

  <SdlWindow
      size="900 900"
      title="Spatial"
      GLMajor="3" GLMinor="3">

    <SdlContext
        DEF="SDLContext"
        useVideo="1"/>

    <PoseTransform
        position="5 0 0">
      <ObjRenderer USE="OBJ"/>
    </PoseTransform>

    <TiledView>

      <param name="tileLocation" value="0 0 1 1"/>
      <SpatialPlanarView
          topLeftCorner="3.80 1.20 0.0"
          bottomRightCorner="6.20 -1.20 0.0"
          upDirection="0.0 1.0 0.0">
        <Viewpoint
            position="5.0 0.0 30.0"/>
        <PoseTransform
            position="5 0 0"
            orientationCenter="0 0 0"
            orientation="ypr 0 0 d0">
          <ObjRenderer USE="OBJ"/>
        </PoseTransform>
      </SpatialPlanarView>

      <param name="tileLocation" value="0 1 1 1"/>
      <SpatialPlanarView
          topLeftCorner="3.80 1.20 0.0"
          bottomRightCorner="6.20 -1.20 0.0"
          upDirection="0.0 1.0 0.0">
        <Viewpoint
            position="5.0 0.0 30.0"/>
        <PoseTransform
            position="5 0 0"
            orientationCenter="0 0 0"
            orientation="ypr 0 0 d45">
          <ObjRenderer USE="OBJ"/>
        </PoseTransform>
      </SpatialPlanarView>

      <param name="tileLocation" value="0 2 1 1"/>
      <SpatialPlanarView
          topLeftCorner="3.80 1.20 0.0"
          bottomRightCorner="6.20 -1.20 0.0"
          upDirection="0.0 1.0 0.0">
        <Viewpoint
            position="5.0 0.0 30.0"/>
        <PoseTransform
            position="5 0 0"
            orientationCenter="0 0 0"
            orientation="ypr 0 0 d90">
          <ObjRenderer USE="OBJ"/>
        </PoseTransform>
      </SpatialPlanarView>

      <param name="tileLocation" value="1 0 1 1"/>
      <SpatialPlanarView
          topLeftCorner="3.80 1.20 0.0"
          bottomRightCorner="6.20 -1.20 0.0"
          upDirection="0.0 1.0 0.0">
        <Viewpoint
            position="5.0 0.0 30.0"/>
        <PoseTransform
            position="5 0 0"
            orientationCenter="0.25 0 0"
            orientation="ypr 0 0 d0">
          <ObjRenderer USE="OBJ"/>
        </PoseTransform>
      </SpatialPlanarView>

      <param name="tileLocation" value="1 1 1 1"/>
      <SpatialPlanarView
          topLeftCorner="3.80 1.20 0.0"
          bottomRightCorner="6.20 -1.20 0.0"
          upDirection="0.0 1.0 0.0">
        <Viewpoint
            position="5.0 0.0 30.0"/>
        <PoseTransform
            position="5 0 0"
            orientationCenter="0.25 0 0"
            orientation="ypr 0 0 d45">
          <ObjRenderer USE="OBJ"/>
        </PoseTransform>
      </SpatialPlanarView>

      <param name="tileLocation" value="1 2 1 1"/>
      <SpatialPlanarView
          topLeftCorner="3.80 1.20 0.0"
          bottomRightCorner="6.20 -1.20 0.0"
          upDirection="0.0 1.0 0.0">
        <Viewpoint
            position="5.0 0.0 30.0"/>
        <PoseTransform
            position="5 0 0"
            orientationCenter="0.25 0 0"
            orientation="ypr 0 0 d90">
          <ObjRenderer USE="OBJ"/>
        </PoseTransform>
      </SpatialPlanarView>

      <param name="tileLocation" value="2 0 1 1"/>
      <SpatialPlanarView
          topLeftCorner="3.80 1.20 0.0"
          bottomRightCorner="6.20 -1.20 0.0"
          upDirection="0.0 1.0 0.0">
        <Viewpoint
            position="5.0 0.0 30.0"/>
        <PoseTransform
            position="5 0 0"
            orientationCenter="0.5 0 0"
            orientation="ypr 0 0 d0">
          <ObjRenderer USE="OBJ"/>
        </PoseTransform>
      </SpatialPlanarView>

      <param name="tileLocation" value="2 1 1 1"/>
      <SpatialPlanarView
          topLeftCorner="3.80 1.20 0.0"
          bottomRightCorner="6.20 -1.20 0.0"
          upDirection="0.0 1.0 0.0">
        <Viewpoint
            position="5.0 0.0 30.0"/>
        <PoseTransform
            position="5 0 0"
            orientationCenter="0.5 0 0"
            orientation="ypr 0 0 d45">
          <ObjRenderer USE="OBJ"/>
        </PoseTransform>
      </SpatialPlanarView>

      <param name="tileLocation" value="2 2 1 1"/>
      <SpatialPlanarView
          topLeftCorner="3.80 1.20 0.0"
          bottomRightCorner="6.20 -1.20 0.0"
          upDirection="0.0 1.0 0.0">
        <Viewpoint
            position="5.0 0.0 30.0"/>
        <PoseTransform
            position="5 0 0"
            orientationCenter="0.5 0 0"
            orientation="ypr 0 0 d90">
          <ObjRenderer USE="OBJ"/>
        </PoseTransform>
      </SpatialPlanarView>

    </TiledView>
  </SdlWindow>

</config>
