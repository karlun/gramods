<config>

  <OStreamMessageSink stream="err" useAnsiColor="1" level="1"/>
  <LogFileMessageSink logFilePath="gramods.log" append="0"/>

  <ImportLibrary library="libgmGraphics.so"/>

  <SphereGeometry
      DEF="GEOMETRY"
      center="0 0 0"
      radius="10"
      frustumSizeRatio="1.1"
      inside="true"/>

