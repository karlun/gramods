<config>

  <OStreamMessageSink stream="err" useAnsiColor="1" level="1"/>
  <LogFileMessageSink logFilePath="gramods.log" append="0"/>

  <ImportLibrary library="gmGraphics"/>

  <SdlWindow
      fullscreen="0"
      title="Spherical"
      GLMajor="3" GLMinor="3" GLProfile="core">

    <SdlContext
        DEF="SDLContext"
        useVideo="1"/>

    <SphereRenderer
        radius="1">
      <ImageTexture
          file="modules/gmGraphics/resources/fulldome360-coordinates.png"/>
    </SphereRenderer>
    <!--SphereRenderer
        radius="2"
        textureCoverageAngle="3.14159">
      <ImageTexture
          file="modules/gmGraphics/resources/fulldome180-coordinates.png"/>
    </SphereRenderer-->

    <SpatialSphericalView
        cubeMapResolution="4096"
        linearInterpolation="1"
        coverageAngle="3.141592"
        sphereRadius="7.4"
        tiltAngle="0.466"
        projectionType="2">

      <LinearAnaglyphsMultiplexer
          leftColor="1 1 0"
          rightColor="0 0 1"
          leftSaturation="1.0"
          rightSaturation="1.0"/>

      <Viewpoint
          position="0 0 0"/>

    </SpatialSphericalView>

  </SdlWindow>

</config>
