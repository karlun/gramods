<config>

  <SdlWindow
      fullscreen="false"
      size="1024 1024"
      GLMajor="3" GLMinor="3">

    <SdlContext useVideo="true"/>

    <Viewpoint
        position="0 0 0"
        eyeSeparation="0.065"/>

    <SaveView
        file="warp-equirectangular.png"
        resolution="8192 8192">

      <SpatialSphericalView
          radius="7.4"
          cubeMapResolution="8192"
          linearInterpolation="1">

        <SideBySideMultiplexer pattern="1"/>
        <EquirectangularCoordinatesMapper/>

        <SphereRenderer
            eye="LEFT"
            position="-0.0325 0 0"
            radius="7.4">

          <EquirectangularCoordinatesMapper/>

          <MultiscopicTextureSplitter DEF="TEXTURE" splitType="1">
            <ImageTexture file="stereo-image.jpg"/>
          </MultiscopicTextureSplitter>

        </SphereRenderer>

        <SphereRenderer
            eye="RIGHT"
            position="+0.0325 0 0"
            radius="7.4">

          <EquirectangularCoordinatesMapper/>

          <MultiscopicTextureSplitter USE="TEXTURE"/>

        </SphereRenderer>

      </SpatialSphericalView>

    </SaveView>

  </SdlWindow>
</config>
