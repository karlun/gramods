<config>

  <OStreamMessageSink stream="err" useAnsiColor="1" level="1"/>
  <LogFileMessageSink logFilePath="gramod.log" append="0"/>

  <ImportLibrary lib="libgmGraphics.so"/>

  <SdlWindow
      size="1024 512"
      title="Lat-Long"
      GLMajor="3" GLMinor="3">

    <SdlContext
        AS="context"
        DEF="SDLContext"
        useVideo="1"/>

    <CubeSceneRenderer
        AS="renderer"
        cubeSize="0.01"
        cubeSetSize="0.2"/>

    <EquirectangularView
        cubeMapResolution="256"
        linearInterpolation="1"
        AS="view">
      <VelocityViewpoint
          axisAngleVelocity="1 0 0 1"
          AS="viewpoint"/>
    </EquirectangularView>

  </SdlWindow>

</config>
