<config>

  <OStreamMessageSink stream="err" useAnsiColor="1" level="1"/>
  <LogFileMessageSink logFilePath="gramod.log" append="0"/>

  <ImportLibrary lib="libgmGraphics.so"/>

  <SdlWindow
      size="1024 1024"
      title="Angular"
      GLMajor="3" GLMinor="3">

    <SdlContext
        AS="context"
        DEF="SDLContext"
        useVideo="1"/>

    <CubeSceneRenderer
        AS="renderer"
        cubeSize="0.2"
        cubeSetSize="10.0"/>

    <AngularFisheyeSpatialDomeView
        cubeMapResolution="1024"
        linearInterpolation="1"
        coverageAngle="6.283"
        domeRadius="7.4"
        eyeSeparation="0.265"
        AS="view">

      <SimpleAnaglyphsMultiplexer
          leftColor="1 0 0"
          rightColor="0 1 1"
          saturation="0.5"
          AS="stereoscopicMultiplexer"/>

      <VelocityViewpoint
          position="0 0 0"
          velocity="0 0 0"
          axisAngleVelocity="1 0 0 0"
          AS="viewpoint"/>

    </AngularFisheyeSpatialDomeView>

  </SdlWindow>

</config>
