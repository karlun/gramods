<config>

  <OStreamMessageSink stream="err" useAnsiColor="1" level="1"/>
  <LogFileMessageSink logFilePath="gramod.log" append="0"/>

  <ImportLibrary lib="libgmGraphics.so"/>

  <SdlWindow
      size="640 480"
      title="UVCstream"
      GLMajor="3" GLMinor="3">
    <SdlContext
        AS="context" DEF="SDLContext"
        useVideo="1"/>
    <TextureRenderer AS="renderer">
      <UvcTexture
          AS="texture"
          resolution="640 480"
          framerate="30"
          format="mjpeg"/>
    </TextureRenderer>
  </SdlWindow>

  <SdlWindow
      size="1410 940"
      title="images"
      GLMajor="3" GLMinor="3">
    <SdlContext
        AS="context" USE="SDLContext"/>
    <TextureRenderer AS="renderer">
      <ImageTexture
          AS="texture"
          file="tmp/video_frame_%05d.jpg"
          range="1 339"
          loop="1"/>
    </TextureRenderer>
    <TiledView AS="view">
      <param name="tileLocation" value="0 2 1 1"/>
      <View AS="view"/>
      <param name="tileLocation" value="1 2 1 1"/>
      <View AS="view"/>
      <param name="tileLocation" value="0 0 2 2"/>
      <View AS="view"/>
    </TiledView>
  </SdlWindow>

</config>
