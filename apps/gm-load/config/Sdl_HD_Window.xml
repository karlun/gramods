<config>

  <OStreamMessageSink stream="err" useAnsiColor="1" level="1"/>
  <!--LogFileMessageSink logFilePath="gramods.log" append="false"/-->

  <ImportLibrary library="gmGraphics"/>

  <SdlWindow
      size="640 480"
      title="UVCstream"
      GLMajor="3" GLMinor="3">
    <SdlContext
        DEF="SDLContext"
        useVideo="1"/>
    <TextureRenderer>
      <UvcTexture
          resolution="640 480"
          framerate="30"
          format="mjpeg"/>
    </TextureRenderer>
  </SdlWindow>

  <SdlWindow
      size="1410 940"
      title="images"
      GLMajor="3" GLMinor="3">
    <SdlContext
        USE="SDLContext"/>
    <TextureRenderer>
      <ImageTexture
          file="tmp/video_frame_%05d.jpg"
          range="1 339"
          loop="1"/>
    </TextureRenderer>
    <TiledView>
      <param name="tileLocation" value="0 2 1 1"/>
      <View/>
      <param name="tileLocation" value="1 2 1 1"/>
      <View/>
      <param name="tileLocation" value="0 0 2 2"/>
      <View/>
    </TiledView>
  </SdlWindow>

</config>
