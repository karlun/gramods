<config>

  <OStreamMessageSink stream="err" useAnsiColor="1" level="1"/>
  <LogFileMessageSink logFilePath="gramod.log" append="0"/>

  <ImportLibrary lib="libgmGraphics.so"/>

  <SdlWindow
      size="900 900"
      title="Spatial"
      GLMajor="3" GLMinor="3">

    <SdlContext
        AS="context" DEF="SDLContext"
        useVideo="1"/>

    <CubeSceneRenderer
        AS="renderer"
        cubeSize="0.1"
        cubeSetSize="2.0"/>

    <TiledView AS="view">

      <param name="tileLocation" value="1 0 1 1"/>
      <SpatialPlanarView
          AS="view"
          topLeftCorner="-2.0 2.0 0.0"
          bottomRightCorner="2.0 -2.0 0.0"
          upDirection="0.0 1.0 0.0">
        <Viewpoint
            AS="viewpoint"
            position="0.0 0.0 3.0"/>
      </SpatialPlanarView>

      <param name="tileLocation" value="1 1 1 1"/>
      <SpatialPlanarView
          AS="view"
          topLeftCorner="0.0 2.0 2.0"
          bottomRightCorner="0.0 -2.0 -2.0"
          upDirection="0.0 1.0 0.0">
        <Viewpoint
            AS="viewpoint"
            position="3.0 0.0 0.0"/>
      </SpatialPlanarView>

      <param name="tileLocation" value="0 0 1 1"/>
      <SpatialPlanarView
          AS="view"
          topLeftCorner="-2.0 0.0 -2.0"
          bottomRightCorner="2.0 0.0 2.0"
          upDirection="0.0 0.0 -1.0">
        <SimpleAnaglyphsMultiplexer
            AS="stereoscopicMultiplexer"/>
        <Viewpoint
            AS="viewpoint"
            position="0.0 3.0 0.0"/>
      </SpatialPlanarView>

      <param name="tileLocation" value="0 1 1 1"/>
      <PosedPlanarView
          AS="view"
          fieldOfView="1">
        <Viewpoint
            AS="viewpoint"
            position="2.0 2.0 2.0"
            lookAt="0.0 0.0 0.0"/>
      </PosedPlanarView>
   </TiledView>
  </SdlWindow>

</config>
