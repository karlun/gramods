<config>

  <OStreamMessageSink stream="err" useAnsiColor="1" level="1"/>
  <LogFileMessageSink logFilePath="gramod.log" append="0"/>

  <ImportLibrary lib="libgmGraphics.so"/>

  <SdlWindow
      size="1024 1024"
      title="Spherical"
      GLMajor="3" GLMinor="3">

    <SdlContext
        AS="context"
        DEF="SDLContext"
        useVideo="1"/>

    <CubeSceneRenderer
        AS="renderer"
        cubeSize="0.2"
        cubeSetSize="10.0"/>

    <SpatialSphericalView
        cubeMapResolution="1024"
        linearInterpolation="1"
        coverageAngle="6.283"
        projection="1"
        AS="view">

      <VelocityViewpoint
          position="0 0 7"
          velocity="0 0 -0.5"
          axisAngleVelocity="1 0 0 0"
          AS="viewpoint"/>

    </SpatialSphericalView>

  </SdlWindow>

</config>
